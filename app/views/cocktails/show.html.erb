<h1><%= @cocktail.name %></h1>

<% @cocktail.doses.each do |dose| %>
    <p>
        <strong><%= dose.description %></strong> Doses Of <strong><%= dose.ingredient.name %></strong>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Delete Dose?" } do %>
                <i class="fas fa-trash"></i>
        <% end %>
    </p>
<% end %>

<%= link_to 'Add Dose',  new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'  %>
<%= link_to "Back to Drinks List",  cocktails_path, class: 'btn btn-primary'  %>