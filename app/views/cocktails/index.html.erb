
<div class="banner-btn sticky-top">
    <div class="banner">
        <div class="container">
            <div class="mx-5 mb-5 pl-5 fixed-top overflow-hidden w-100">
                <h1 id="typed-cocktail-title"></h1>
            </div>
        </div>
    </div>
    <div class="container btn-create  ml-5 mt-3 py-4">
        <%= link_to 'Create a new Cocktail',  new_cocktail_path, class: 'btn btn-gradient'  %>
    </div>
</div>


<div class="container">
    
    <div  class="row d-flex">
        <% @cocktails.each do |cocktail| %>
            <div data-aos="zoom-in-up" class="card-product col-5 d-flex flex-row justify-content-between mx-3 mt-3 py-3 px-5">
                <% if cocktail.photo.attached? %>
                    <%= cl_image_tag cocktail.photo.key, height: 400, width: 400, crop: :fill %>
                <% else %>
                    <img class="ml-0" src="https://www.pngitem.com/pimgs/m/80-807363_cocktails-neon-sign-png-transparent-png.png"/> 
                <% end %> 
                <div class="card-info pr-3">
                    <h3 class="">
                        <%= link_to  "#{cocktail.name}", cocktail_path(cocktail), class: "cocktail-name" %>
                    </h3>
                </div>
                <div class="card-info pr-5">
                    <h3 class="">
                        <%= link_to cocktail_path(cocktail) do %>
                             Edit Cocktail - <i class="fas fa-pencil-alt"></i>
                        <% end %>
                    </h3>
                    <h3 class="">
                        <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Delete Cocktail?" } do %>
                             Delete Cocktail - <i class="fas fa-trash-alt"></i>
                        <% end %>
                    </h3>
                </div>
            </div>  
        <% end %>
    </div>
</div>